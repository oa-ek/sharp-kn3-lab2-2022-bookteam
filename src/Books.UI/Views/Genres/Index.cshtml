@model IEnumerable<Books.Core.Entities.Genre>

<style>
	.genre_block {
		padding: 15px 30px;
		border: 1px solid white;
		font-size: 16px;
		margin-right: 15px;
		margin-top: 10px;
		color: white;
	}

</style>
<div class="container">
	<div class="row mt-3">
		@foreach(var genre in Model)
		{
			<div class="col-3">
				<div class="card">
					<div class="card-body">
                        <a asp-action="FilteredList" asp-route-id="@genre.Id" class="btn btn-light" >@genre.GenreName</a>
						<a asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-danger">Delete</a>
						<a asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-warning">Edit</a>
					</div>
				</div>
				<div class="genre_block">
				</div>
			</div>
		}
	</div>
</div>

